{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Scheduler App",
            "type": "shell",
            "command": "javac",
            "args": [
                "-cp",
                "${workspaceFolder}/lib/jakarta-servlet-api.jar",
                "-d",
                "${workspaceFolder}/scheduler-webapp/WEB-INF/classes",
                "${workspaceFolder}/scheduler-webapp/WEB-INF/classes/com/scheduler/*.java"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": "$javac"
        },
        {
            "label": "Start Tomcat Server",
            "type": "shell",
            "command": "${workspaceFolder}/tomcat/bin/startup.bat",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "dependsOn": "Build Scheduler App"
        },
        {
            "label": "Stop Tomcat Server",
            "type": "shell",
            "command": "${workspaceFolder}/tomcat/bin/shutdown.bat",
            "windows": {
                "command": "${workspaceFolder}/tomcat/bin/shutdown.bat"
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Deploy to Tomcat",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-Command",
                "Copy-Item -Path '${workspaceFolder}/scheduler-webapp' -Destination '${workspaceFolder}/tomcat/webapps/scheduler' -Recurse -Force"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "dependsOn": "Build Scheduler App"
        },
        {
            "label": "Run Complete Setup",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Build Scheduler App",
                "Deploy to Tomcat",
                "Start Tomcat Server"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        }
    ]
}
