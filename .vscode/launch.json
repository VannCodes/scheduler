{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "Debug Scheduler Servlet",
            "request": "launch",
            "mainClass": "com.scheduler.SchedulerServlet",
            "projectName": "scheduler-webapp",
            "classPaths": [
                "${workspaceFolder}/scheduler-webapp/WEB-INF/classes",
                "${workspaceFolder}/lib/servlet-api.jar"
            ],
            "args": [],
            "console": "integratedTerminal"
        },
        {
            "type": "java",
            "name": "Run Tomcat with Debug",
            "request": "launch",
            "mainClass": "org.apache.catalina.startup.Bootstrap",
            "args": [
                "start"
            ],
            "vmArgs": [
                "-Dcatalina.home=${workspaceFolder}/tomcat",
                "-Dcatalina.base=${workspaceFolder}/tomcat",
                "-Djava.util.logging.manager=org.apache.juli.logging.LogManager",
                "-Djava.util.logging.config.file=${workspaceFolder}/tomcat/conf/logging.properties"
            ],
            "classPaths": [
                "${workspaceFolder}/tomcat/bin/bootstrap.jar",
                "${workspaceFolder}/tomcat/bin/tomcat-juli.jar"
            ],
            "console": "integratedTerminal",
            "preLaunchTask": "Run Complete Setup"
        }
    ]
}
